{
  "name": "game-board-group-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "prisma generate",
    "migrate": "prisma migrate dev",
    "dev": "npm run tsc && SET PORT=9000 && node dist/app.js",
    "start": "node dist/app.js",
    "format": "npx prettier --write . & npx eslint",
    "eslint": "eslint",
    "postinstall": "npm run tsc",
    "tsc": "tsc",
    "docker:initdb": "docker run --name postgres -e POSTGRES_PASSWORD=prisma -p 5434:5434 -d postgres",
    "docker:initRedis": "docker run -d --name redis-stack-server -p 6378:6378 redis/redis-stack-server:latest",
    "docker": "npm run docker:initdb && npm run docker:initRedis"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@sendgrid/mail": "^7.6.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.14.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/uuid": "^8.3.1",
    "redis-clustr": "^1.4.3",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
